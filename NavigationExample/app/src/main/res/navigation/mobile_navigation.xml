<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.csanchezb.navigationexample.ui.home.ProjectFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.csanchezb.navigationexample.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.csanchezb.navigationexample.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/accessFragment"
        android:name="com.csanchezb.navigationexample.ui.access.AccessFragment"
        android:label="@string/title_access"
        tools:layout="@layout/fragment_access" />

    <fragment
        android:id="@+id/fragment_signup"
        android:name="com.csanchezb.navigationexample.ui.signup.SignupFragment"
        android:label="Sign Up"
        tools:layout="@layout/fragment_signup" />

</navigation>